cd /home/jovyan/sos-docs/

BRANCH=$(openssl rand -base64 12)

git fetch upsteam master

git checkout -b $BRANCH FETCH_HEAD

cd development

sos run update-website convert-homepage+convert-documentation+convert-tutorials+convert-guide -v1

cd ..

git config --global user.name "sosdocs"
git config --global user.email "ben.bob@gmail.com"

git commit . -m 'Update sos-docs'
 
dt=$(date '+%d/%m/%Y %H:%M:%S')
hub pull-request -m "sos-docs updated from sos live server on ${dt}"
